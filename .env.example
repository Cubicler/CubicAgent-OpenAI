# Port number for the CubicAgent server to listen on
AGENT_PORT=3000

# Display name for this agent instance
AGENT_NAME=CubicAgent-OpenAI

# Your OpenAI API key (required) - get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-api-key-here

# OpenAI model to use for chat completions (e.g., gpt-4o, gpt-4, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o

# Temperature for OpenAI responses (0.0 = deterministic, 2.0 = very creative)
OPENAI_TEMPERATURE=1

# Maximum tokens used for one OpenAI session response
OPENAI_SESSION_MAX_TOKENS=2048

# Base URL for the Cubicler orchestration service
CUBICLER_URL=http://localhost:1503

# Timeout in milliseconds for API requests to Cubicler
AGENT_TIMEOUT=10000

# Maximum number of retries for failed Cubicler requests
AGENT_MAX_RETRIES=3

# Maximum iterations for function calling loops to prevent infinite recursion
AGENT_SESSION_MAX_ITERATION=10
